<div class="document">
  <% unless @document.name.blank? %>
  <h1><%= @document.name %></h1>
  <% end %>
  <div class="text">
    <p class="m0 text-muted"><%= @document.content_html.html_safe %></p>
  </div>
</div>

<%= link_to edit_document_path(@document), class: "btn-paper" do %>
  <%= inline_svg("edit.svg") %>
<% end %>
