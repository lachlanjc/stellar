<%= form_for([@discussion, @discussion.comments.build]) do |f| %>
  <%= f.text_field :commenter, class: 'text-input', placeholder: 'What\'s your name?' %>
  <%= f.text_area :body, class: 'text-input', placeholder: 'Say something awesome (Markdown supported).', rows: 4 %>
  <%= f.submit 'Post', class: 'btn' %>
<% end %>
